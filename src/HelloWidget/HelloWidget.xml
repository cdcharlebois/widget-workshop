<?xml version="1.0" encoding="utf-8" ?>
<widget id="HelloWidget.widget.HelloWidget" needsEntityContext="true" 
    xmlns="http://www.mendix.com/widget/1.0/">
    <name>HelloWidget</name>
    <description>The description of this widget.</description>
    <icon />
    <properties>
        <property key="dateFormat" type="string" required="true" defaultValue="mm/dd/yyyy">
            <caption>Date Format</caption>
            <category>General</category>
            <description></description>
        </property>
        <property key="onCloseMicroflow" type="microflow" required="false">
            <caption>On Close</caption>
            <category>General</category>
            <description>A microflow to run when the picker is closed.</description>
            <returnType type="Void"></returnType>
        </property>
        <property key="attribute" type="attribute" required="true" isPath="optional" pathType="reference">
            <caption>Attribute</caption>
            <category>General</category>
            <description></description>
            <attributeTypes>
                <attributeType name="DateTime" />
            </attributeTypes>
        </property>
    </properties>
</widget>